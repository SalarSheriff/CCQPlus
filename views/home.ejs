        //The end time of the presence patrol is covered on the server side. The server just gets the current time and uses that as the end time
        fetch(document.location.origin + '/uploadpresencepatrol/<%=cadetname%>/' + presencePatrolStartTime + '/' + message + '/' + "patrol").then(response => {
            if (!response.ok) {
                throw new Error('Network response was not ok');
            }
            return response.json();
        }).then(data => {
           
        }).catch(error => {
            console.error('There was a problem with your fetch operation:', error);
        });

    }
    
}

